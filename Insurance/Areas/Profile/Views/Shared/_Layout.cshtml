<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - insurance_new</title>
    <base href="~/" />
    @*<link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/common/css/bootstrap/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/common/css/bootstrap/bootstrap-rtl.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/common/css/common.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/common/css/admin.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <link href="~/common/css/jHtmlArea/jHtmlArea.css" rel="stylesheet" />
    <script src="~/common/js/jHtmlArea/jHtmlArea-0.8.min.js"></script>


    @*<link rel="stylesheet" href="~/@ViewData["view"]/css/ui.css" asp-append-version="true" />
        <link rel="stylesheet" media="screen and (max-width: 992px)" href="~/@ViewData["view"]/css/tablet.css" asp-append-version="true"/>
        <link rel="stylesheet" media="screen and (max-width: 768px)" href="~/@ViewData["view"]/css/mobile.css" asp-append-version="true"/>*@
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $(function () {
                $(".editor").htmlarea(
                    {
                        toolbar: [
                            ["html", "forecolor", "horizontalrule"],
                            ["bold", "italic", "underline"],
                            ["indent", "outdent"],
                            ["orderedList", "unorderedList"],
                            ["link", "unlink"]
                        ],
                        css: '/common/css/common.css'
                    }
                );
            });
        });
    </script>
</body>
</html>
