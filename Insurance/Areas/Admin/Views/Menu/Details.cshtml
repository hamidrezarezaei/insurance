@model menu
@{ViewBag.type = "details";}

<div class="row">
    <h1 class="col-md-8 admin-box-title">
        @Model.title
    </h1>
    <div class="col-md-4 op-buttns">
        <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-primary btn-rounded">ویرایش <i class="far fa-edit"></i></a>
        <a asp-action="Delete" asp-route-id="@Model.id" class="btn btn-danger btn-rounded">حذف <i class="far fa-trash-alt"></i></a>
    </div>
</div>
@Html.Partial("Details_partial", Model)

