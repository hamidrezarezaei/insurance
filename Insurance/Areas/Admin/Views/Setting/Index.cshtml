@model IEnumerable<setting>

<div class="row">
    <h1 class="col-md-9 admin-box-title">لیست تنظیمات</h1>
    <div class="col-md-3 op-buttns top">
        <a btntype="Create" asp-action="Create" asp-route-returnurl="/Admin/Setting/Index">ایجاد تنظیم جدید</a>
    </div>
</div>

<div class="admin-box">
    <table class="table table-striped">

        <tbody>
            @{int r = 0;}
            @foreach (var item in Model)
            {
                r++;
            <tr>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" asp-route-returnurl="/Admin/Setting/Index">@r - @item.title ( @item.key ) </a>
                </td>
                <td class="op-buttns">
                    <a btntype="Edit" asp-action="Edit" asp-route-id="@item.id" asp-route-returnurl="/Admin/Setting/Index">ویرایش</a>
                    <a btntype="Delete" asp-action="Delete" asp-route-id="@item.id" asp-route-returnurl="/Admin/Setting/Index">حذف</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>