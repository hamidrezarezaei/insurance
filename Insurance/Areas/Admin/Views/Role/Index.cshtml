@model pagedResult<role>

<div class="row">
    <h1 class="col-md-4 admin-box-title">لیست نقش ها</h1>
    <div class="col-md-5 admin-box-title">
        <form>
            <p>
                فیلتر: <input type="text" value="@ViewData["searchString"]" name="SearchString">
                <input type="submit" value="اعمال" />
            </p>
        </form>
    </div>
    <div class="col-md-3 op-buttns top">
        <a btntype="Create" asp-action="Create" asp-route-returnurl="/Admin/Role/Index">ایجاد نقش جدید</a>
    </div>
</div>

<div class="admin-box">
    <table class="table  table-striped">
        @{int r = (Model.pagingData.currentPage - 1) * Model.pagingData.itemsPerPage; }
        @foreach (var role in Model.items)
        {
            r++;

        <tr>
            <td>@r - @role.actualName</td>
        </tr>
}
    </table>
</div>
<nav page-model="@Model.pagingData" page-action="index" page-contoller="Role" search-string="@ViewData["searchString"]"></nav>