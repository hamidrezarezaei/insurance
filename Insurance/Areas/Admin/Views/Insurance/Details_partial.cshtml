@model insurance

<div class="admin-box">

    <table class="table detail table-striped">
        <tr>
            <td>@Html.DisplayNameFor(model => model.orderIndex) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"><input asp-for="orderIndex" class="form-control" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.orderIndex)</td>
            }
        </tr>
        <tr>
            <td> @Html.DisplayNameFor(model => model.active) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td><input asp-for="active" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.active)</td>
            }
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.name) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"><input asp-for="name" class="form-control" /></td>
            }
            else
            {
                <td> @Html.DisplayFor(model => model.name)</td>
            }
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.title)  :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td><input asp-for="title" class="form-control" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.title)</td>
            }
        </tr>
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.image) :
                </td>

                <td>
                    <script>
                        function readURL(input) {
                            if (input.files && input.files[0]) {
                                var reader = new FileReader();

                                reader.onload = function (e) {
                                    $('#preview')
                                        .attr('src', e.target.result)
                                };

                                reader.readAsDataURL(input.files[0]);
                            }
                        }
                    </script>
                    <img id="preview" src="@Model.image" asp-append-version="true" rowid="@Model.id" imagesrc="@Model.image" />
                    @if (ViewBag.type == "edit")
                    {
                        <a href="@Model.image" download>دانلود</a>
                    }
                </td>

            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.formula)  :</td>

                <td class="ltr"><textarea asp-for="formula" class="form-control"></textarea></td>



            </tr>}
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>

                <td> @Html.DisplayNameFor(model => model.cssClass) :</td>

                <td class="ltr"><input asp-for="cssClass" class="form-control" /></td>



            </tr>
        }
        <tr>
            <td>@Html.DisplayNameFor(model => model.stepCount) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"><input asp-for="stepCount" class="form-control" /></td>
            }
            else
            {
                <td> @Html.DisplayFor(model => model.stepCount)</td>
            }
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.tabLocation)  :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"><input asp-for="tabLocation" class="form-control" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.tabLocation)</td>
            }
        </tr>
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.onClientClick)  :</td>

                <td class="ltr"><textarea asp-for="onClientClick" class="form-control"></textarea></td>

            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.isDefault) :</td>
                <td><input asp-for="isDefault" /></td>
            </tr>
        }
    </table>
</div>