@model step

@if (ViewBag.type == "edit")
{
    <input type="hidden" asp-for="insuranceId" />
}
else if (ViewBag.type == "create")
{
    <input type="hidden" asp-for="insuranceId" value="@ViewData["ParentId"]" />
}

<div class="admin-box">
    <table class="table detail table-striped">
        <tr>
            <td>@Html.DisplayNameFor(model => model.orderIndex) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"> <input asp-for="orderIndex" class="form-control" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.orderIndex)</td>
            }
        </tr>
        <tr>
            <td> @Html.DisplayNameFor(model => model.active) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td>  <input asp-for="active" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.active)</td>
            }
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.name) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"><input asp-for="name" class="form-control" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.name)</td>
            }
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.title) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td><input asp-for="title" class="form-control" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.title)</td>
            }
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.number) :</td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"><input asp-for="number" class="form-control" /></td>
            }
            else
            {
                <td>@Html.DisplayFor(model => model.number)</td>
            }
        </tr>
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.navigationCssClass) :</td>

                <td class="ltr"><input asp-for="navigationCssClass" class="form-control" /></td>


            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.image) :
                </td>

                <td>
                    <script>
                        function readURL(input) {
                            if (input.files && input.files[0]) {
                                var reader = new FileReader();

                                reader.onload = function (e) {
                                    $('#preview')
                                        .attr('src', e.target.result)
                                };

                                reader.readAsDataURL(input.files[0]);
                            }
                        }
                    </script>
                    <img id="preview"  src="@Model.image" asp-append-version="true" rowid="@Model.id" imagesrc="@Model.image" />
                    @if (ViewBag.type == "edit")
    {
                <a href="@Model.image" download>دانلود</a>
}
                </td>

            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.nextStepText) :</td>

                <td><input asp-for="nextStepText" class="form-control" /></td>


            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.nextStepCssClass) :</td>

                <td  class="ltr"><input asp-for="nextStepCssClass" class="form-control" /></td>


            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.previousStepText) :</td>

                <td><input asp-for="previousStepText" class="form-control" /></td>



            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.previousStepCssClass) :</td>

                <td  class="ltr"><input asp-for="previousStepCssClass" class="form-control" /></td>



            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.beforStepButtonsCssClass) :</td>

                <td class="ltr"><input asp-for="beforStepButtonsCssClass" class="form-control" /></td>
            </tr>
        }
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>@Html.DisplayNameFor(model => model.priceCssClass) :</td>

                <td class="ltr"><input asp-for="priceCssClass" class="form-control" /></td>


            </tr>}
    </table>
</div>