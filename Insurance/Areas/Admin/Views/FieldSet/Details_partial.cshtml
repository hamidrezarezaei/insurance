@model fieldSet

@if (ViewBag.type == "edit")
{
    <input type="hidden" asp-for="stepId" />
}
else if (ViewBag.type == "create" )
{
<input type="hidden" asp-for="stepId"  value="@ViewData["ParentId"]"/>
}
<div class="admin-box">
    <table class="table detail table-striped">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.orderIndex)
            </td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr">
                    <input asp-for="orderIndex" class="form-control" />
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(model => model.orderIndex)
                </td>
            }
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.active)
            </td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td>
                    <input asp-for="active" />
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(model => model.active)
                </td>
            }
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.name)
            </td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr">
                    <input asp-for="name" class="form-control" />
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(model => model.name)
                </td>
            }
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.title)
            </td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td>
                    <input asp-for="title" class="form-control" />
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(model => model.title)
                </td>
            }
        </tr>
        @if (ViewBag.type == "create" || ViewBag.type == "edit")
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.cssClass)

                </td>
                <td  class="ltr">
                    <input asp-for="cssClass" class="form-control" />
                </td>
            </tr>
        }
    </table>
</div>