<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - insurance_new</title>
    <base href="~/" />
    @*<link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/common/css/bootstrap/bootstrap.min.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/common/css/bootstrap/bootstrap-rtl.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous" />

    <link rel="stylesheet" href="~/common/css/common.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <link href="~/common/css/jHtmlArea/jHtmlArea.css" rel="stylesheet" />
    <script src="~/common/js/jHtmlArea/jHtmlArea-0.8.min.js"></script>
    <link rel="stylesheet" href="~/common/css/select2/select2.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/common/css/admin/admin.css" asp-append-version="true" />
    <link rel="stylesheet" media="screen and (max-width: 992px)" href="~/common/css/admin/tablet.css" asp-append-version="true" />
    <link rel="stylesheet" media="screen and (max-width: 768px)" href="~/common/css/admin/mobile.css" asp-append-version="true" />
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 pr-0">
                <div class="sec-admin-menu ">
                    @await Component.InvokeAsync("AdminMenu")
                </div>
            </div>
            <div class="sec-admin-content col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/common/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/common/js/select2/select2.min.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $(function () {
                $(".editor").htmlarea(
                    {
                        toolbar: [
                            ["html", "forecolor", "horizontalrule"],
                            ["bold", "italic", "underline"],
                            ["indent", "outdent"],
                            ["orderedList", "unorderedList"],
                            ["link", "unlink"]
                        ],
                        css: '/common/css/common.css'
                    }
                );
            });
        });
    </script>
</body>
</html>
