@model term

<div class="admin-box">
    <table class="table detail table-striped">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.active):

            </td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td><input asp-for="active" /></td>
            }
            else
            {

                <td>
                    @Html.DisplayFor(model => model.active)

                </td>
            }
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.name):

            </td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td class="ltr"><input asp-for="name" class="form-control" /></td>
            }
            else
            {

                <td>
                    @Html.DisplayFor(model => model.name)
                </td>
            }
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.title):

            </td>
            @if (ViewBag.type == "create" || ViewBag.type == "edit")
            {
                <td><input asp-for="title" class="form-control" /></td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(model => model.title)
                </td>
            }
        </tr>
    </table>
</div>



