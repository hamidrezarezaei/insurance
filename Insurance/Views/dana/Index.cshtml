@section styles {
    <link href="~/Component/Menu/Default.css" rel="stylesheet" />
    <link href="~/Component/Menu/Accordion.css" rel="stylesheet" />
}

@await Html.PartialAsync("_header.cshtml")

<section id="sec-insurance">
    <div class="container holder">
        @*<app class="row no-gutters" asp-prerender-module="ClientApp/dist/main-server"><img src="~/dana/image/theme/loading.gif" class="loading" /></app>*@
        <app class="row no-gutters" asp-ng2-prerender-module="ClientApp/dist/main-server" asp-prerender-timeout="100000">
            <div id="loadingContainer">
                <div class="loading"></div>
            </div>
        </app>
    </div>
</section>

<section id="sec-about-us">
    <div class="container holder">
        <div class="row">
            <h1 class="col-12">
                <span>
                    درباره بیمه دانا
                </span>
            </h1>
            <div class="col1 col-md-6 col-xs-12">
                @await Component.InvokeAsync("Box", new { id = 14, componentName = "about-us", isShowTitle = false })
            </div>
            <div class="col2 col-md-6 col-xs-12">
                <img src="~/dana/image/theme/about-us.png" title="درباره بیمه دانا" alt="درباره بیمه دانا"  class="about-us-img" />
            </div>
        </div>
    </div>
</section>

<section id="sec-other-insurance">
    <div class="container holder">
        @await Component.InvokeAsync("BoxCategory", new { id = 5, isShowCategoryTitle = true, isShowImage = true, isShowContent = false, componentName = "Other-insurance" })
    </div>
</section>

<section id="sec-article" class="container">
    @await Component.InvokeAsync("BoxCategory", new { id = 1, isShowCategoryTitle = true, componentName = "box-category-articles" })
</section>

@await Html.PartialAsync("_footer.cshtml")



@section scripts {
    <script src="~/dist/main-client.js" asp-append-version="true"></script>
}
