<header id="sec-header">
    <nav class="navbar">
        <div class="container">
            <div class="row">
                <div class="col-9 order-2 col-md-3">
                    <a href="/">
                        <img src="~/dana/image/theme/logo.jpg" alt="آسایش تدبیر ایرانیان" title="آسایش تدبیر ایرانیان" class="logo" />
                    </a>
                </div>
                <div class="col-md-9 col-12 order-3  desktop-menu">

                    @await Component.InvokeAsync("Menu", new { id = 10 })
                </div>
