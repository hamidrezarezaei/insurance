                    <div class="modal fade right" id="sidebar-right" tabindex="-1" role="dialog">
                        <div class="modal-dialog modal-sm" role="document">
                            <div class="modal-content">
                                @await Component.InvokeAsync("Menu", new { id = 10, template = "Accordion" })
